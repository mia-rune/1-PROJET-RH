{% include 'partials/header.twig' with {'title': 'ManageRH - Connexion'} %}

<main>
    <div class="form-container">
        <h2>Connexion</h2>

        {% if error %}
            <div class="error-message">{{ error }}</div>
        {% endif %}

        {% if registered %}
            <div class="success-message">Inscription réussie ! Vous pouvez maintenant vous connecter.</div>
        {% endif %}

        <form action="/login" method="POST">
            <div class="form-group">
                <label for="siret">N° de Siret</label>
                <input type="text" id="siret" name="siret" pattern="[0-9]{14}" title="Le SIRET doit contenir 14 chiffres" required>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" required>
            </div>

            <div style="text-align: center;">
                <button type="submit" class="btn btn-primary">Se connecter</button>
            </div>
        </form>

        <p class="form-footer">
            Pas encore de compte ? <a href="/register">S'inscrire</a>
        </p>
    </div>
</main>

{% include 'partials/footer.twig' %}
